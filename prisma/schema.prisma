generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user{
  id            String     @id @default(uuid()) @map("user_id") @db.Char(36)
  email         String     @unique
  photo_profile String?
  name          String
  absent        String?
  classes       String?
  school_origin  String?
  teacher_sub   Teacher[]
  generation    String?
}

model Teacher{
  id String @id @default(uuid()) @map("teacher_id") @db.Char(36)
  email  String
  photo_profile String?
  name String
  major String
  exercise Exercise[]
  subcription user[]
}

model Exercise{
  id String @id @default(uuid()) @map("exercise_id") @db.Char(36)
  name String
  dificulty String
  matery String
  Teacher Teacher[]
}
